<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/id_userDK"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:boxBackgroundColor="@color/rand_aqua"
        app:boxCornerRadiusBottomEnd="13dp"
        app:boxCornerRadiusBottomStart="13dp"
        app:boxCornerRadiusTopEnd="13dp"
        app:boxCornerRadiusTopStart="13dp"
        app:startIconDrawable="@drawable/ic_person"
        app:boxStrokeColor="#fff">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txaId_userDK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/contentTextColor"
            android:enabled="false"
            android:textColorHint="#fff" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_userDK"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-20dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txFormDK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Form Input"
                android:textColor="@color/darkTextColor"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txDateDK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/txFormDK"
                android:layout_alignBottom="@id/txFormDK"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="xx-xx-xxxx"
                android:textColor="@color/darkTextColor"
                android:textStyle="italic" />

            <View
                android:id="@+id/divider_userDK"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txFormDK"
                android:layout_marginVertical="10dp"
                android:background="#C4BFBF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_userDK"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:id="@+id/id_sektorDK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/rand_aqua"
                    app:boxCornerRadiusBottomEnd="13dp"
                    app:boxCornerRadiusBottomStart="13dp"
                    app:boxCornerRadiusTopEnd="13dp"
                    app:boxCornerRadiusTopStart="13dp"
                    app:boxStrokeColor="#fff"
                    android:enabled="false">

                    <AutoCompleteTextView
                        android:id="@+id/txa_sektorDK"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tanaman"
                        android:textColorHint="@color/black"
                        android:textColor="@color/blackTextColor"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/id_luasDK"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/rand_aqua"
                    app:boxCornerRadiusBottomEnd="13dp"
                    app:boxCornerRadiusBottomStart="13dp"
                    app:boxCornerRadiusTopEnd="13dp"
                    app:boxCornerRadiusTopStart="13dp"
                    app:boxStrokeColor="#fff"
                    app:suffixText="/ha"
                    app:suffixTextColor="@color/blackTextColor"
                    android:enabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txa_luasDK"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Luas Lahan"
                        android:textColorHint="@color/black"
                        android:inputType="numberDecimal|number"
                        android:textColor="@color/contentTextColor"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    Jenis Pupuk"
                    android:textColor="@color/blackTextColor"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_marginTop="10dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/id_ureaDK"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    app:boxBackgroundColor="@color/rand_aqua"
                    app:boxCornerRadiusBottomEnd="13dp"
                    app:boxCornerRadiusBottomStart="13dp"
                    app:boxCornerRadiusTopEnd="13dp"
                    app:boxCornerRadiusTopStart="13dp"
                    app:boxStrokeColor="#fff"
                    app:suffixText="/ha"
                    app:suffixTextColor="@color/blackTextColor"
                    android:enabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txa_ureaDK"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="UREA"
                        android:textColorHint="@color/black"
                        android:inputType="numberDecimal|number"
                        android:textColor="@color/contentTextColor"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/id_sp36DK"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    app:boxBackgroundColor="@color/rand_aqua"
                    app:boxCornerRadiusBottomEnd="13dp"
                    app:boxCornerRadiusBottomStart="13dp"
                    app:boxCornerRadiusTopEnd="13dp"
                    app:boxCornerRadiusTopStart="13dp"
                    app:boxStrokeColor="#fff"
                    app:suffixText="/ha"
                    app:suffixTextColor="@color/blackTextColor"
                    android:enabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txa_sp36DK"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="SP36"
                        android:textColorHint="@color/black"
                        android:inputType="numberDecimal|number"
                        android:textColor="@color/contentTextColor"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/id_zaDK"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    app:boxBackgroundColor="@color/rand_aqua"
                    app:boxCornerRadiusBottomEnd="13dp"
                    app:boxCornerRadiusBottomStart="13dp"
                    app:boxCornerRadiusTopEnd="13dp"
                    app:boxCornerRadiusTopStart="13dp"
                    app:boxStrokeColor="#fff"
                    app:suffixText="/ha"
                    app:suffixTextColor="@color/blackTextColor"
                    android:enabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txa_zaDK"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ZA"
                        android:textColorHint="@color/black"
                        android:inputType="numberDecimal|number"
                        android:textColor="@color/contentTextColor"
                        android:enabled="false" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/id_npkDK"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    app:boxBackgroundColor="@color/rand_aqua"
                    app:boxCornerRadiusBottomEnd="13dp"
                    app:boxCornerRadiusBottomStart="13dp"
                    app:boxCornerRadiusTopEnd="13dp"
                    app:boxCornerRadiusTopStart="13dp"
                    app:boxStrokeColor="#fff"
                    app:suffixText="/ha"
                    app:suffixTextColor="@color/blackTextColor"
                    android:enabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txa_npkDK"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="NPK"
                        android:textColorHint="@color/black"
                        android:inputType="numberDecimal|number"
                        android:textColor="@color/contentTextColor"
                        android:enabled="false" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/id_organikDK"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    app:boxBackgroundColor="@color/rand_aqua"
                    app:boxCornerRadiusBottomEnd="13dp"
                    app:boxCornerRadiusBottomStart="13dp"
                    app:boxCornerRadiusTopEnd="13dp"
                    app:boxCornerRadiusTopStart="13dp"
                    app:boxStrokeColor="#fff"
                    app:suffixText="/ha"
                    app:suffixTextColor="@color/blackTextColor"
                    android:enabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txa_organikDK"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ORGANIK"
                        android:textColorHint="@color/black"
                        android:inputType="numberDecimal|number"
                        android:textColor="@color/contentTextColor"
                        android:enabled="false" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>